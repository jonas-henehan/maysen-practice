<article class="lookbook-layout lookbook-layout-slider {{ row_color }}">
  <div class="lookbook-slots">

    <div class="lookbook-slider" data-lookbook-slider>
      {% for media in product.media %}
        <div class="lookbook-slide lookbook-slide-{{ forloop.index }}">
          {%
            include 'lookbook-image',
            image: media.preview_image,
            hide_link: true,
            size: '1140x500'
          %}
        </div>
      {% endfor %}
    </div>

    {% include 'lookbook-label', truncate_length: 60 %}
  </div>
</article>
