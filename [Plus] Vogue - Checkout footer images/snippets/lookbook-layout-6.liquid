{% assign class_name = 'lookbook-layout-6' %}
{% if is_alt %}
  {% capture class_name %}{{ class_name }} lookbook-layout-6-alt{% endcapture %}
{% endif %}

<article class="lookbook-layout {{ class_name }} {{ row_color }}">
  <div class="lookbook-slots">

    {% for media in product.media %}
      <div class="lookbook-slot lookbook-slot-{{ forloop.index }}">
        {% include 'lookbook-image', image: media.preview_image %}
      </div>
    {% endfor %}

    {% include 'lookbook-label', truncate_length: 60 %}

  </div>
</article>
